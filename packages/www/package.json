{
    "name": "@mapwatch/www",
    "version": "1.0.0",
    "source": "public/index.html",
    "license": "GPL-3.0",
    "private": true,
    "scripts": {
        "setup": "bash scripts/_build/version && bash scripts/_build/copy-static",
        "l10n": "bash scripts/_build/l10n",
        "start": "yarn setup && concurrently --kill-others \"yarn l10n --watch\" \"PARCEL_ELM_NO_DEBUG=1 parcel\" ",
        "build": "yarn setup && yarn l10n && parcel build",
        "test:fixture": "node ./tests/Fixture/build.js",
        "test": "yarn setup && yarn l10n && yarn test:fixture && elm-app test",
        "clean": "rm -rf dist tmp"
    },
    "parcelIgnore": [
        "/localization/{locale}/mapwatch.ftl"
    ],
    "dependencies": {
        "@fluent/web": "^0.2.1"
    },
    "devDependencies": {
        "@parcel/packager-raw-url": "^2.2.1",
        "@parcel/transformer-elm": "^2.2.1",
        "@parcel/transformer-webmanifest": "^2.2.1",
        "concurrently": "^7.0.0",
        "elm": "^0.19.1-5",
        "parcel": "^2.2.1",
        "parcel-resolver-ignore": "^2.0.0"
    }
}
